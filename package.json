{
    "version": "5.0.0",
    "name": "angular-schematics",
    "displayName": "Angular Schematics",
    "description": "Angular schematics (CLI commands) from files Explorer or Command Palette.",
    "keywords": [
        "angular",
        "angular cli",
        "schematics",
        "angular schematics",
        "multi-root ready"
    ],
    "categories": [
        "Other"
    ],
    "icon": "icon-angular.png",
    "license": "MIT",
    "publisher": "cyrilletuzi",
    "author": {
        "name": "cyrilletuzi",
        "url": "https://www.cyrilletuzi.com/en/web/"
    },
    "contributors": [
        {
            "name": "cyrilletuzi",
            "url": "https://www.cyrilletuzi.com/en/web/"
        }
    ],
    "homepage": "https://github.com/cyrilletuzi/vscode-angular-schematics/",
    "repository": {
        "type": "git",
        "url": "https://github.com/cyrilletuzi/vscode-angular-schematics/"
    },
    "bugs": {
        "url": "https://github.com/cyrilletuzi/vscode-angular-schematics/issues"
    },
    "qna": false,
    "engines": {
        "vscode": "^1.56.0"
    },
    "activationEvents": [
        "workspaceContains:**/angular.json",
        "workspaceContains:**/.angular.json"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ngschematics.generateComponent",
                "title": "Angular: Generate a component"
            },
            {
                "command": "ngschematics.generateService",
                "title": "Angular: Generate a service"
            },
            {
                "command": "ngschematics.generateModule",
                "title": "Angular: Generate a module"
            },
            {
                "command": "ngschematics.generate",
                "title": "Angular: Generate another schematic"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "ngschematics.generateComponent",
                    "group": "angularschematics@1",
                    "when": "inAngularProject"
                },
                {
                    "command": "ngschematics.generateService",
                    "group": "angularschematics@2",
                    "when": "inAngularProject"
                },
                {
                    "command": "ngschematics.generateModule",
                    "group": "angularschematics@3",
                    "when": "inAngularProject"
                },
                {
                    "command": "ngschematics.generate",
                    "group": "angularschematics@4",
                    "when": "inAngularProject"
                }
            ]
        },
        "configuration": [
            {
                "title": "Angular Schematics",
                "properties": {
                    "ngschematics.schematics": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [],
                        "description": "Add other schematics (for example: \"@angular/material\")",
                        "scope": "resource"
                    },
                    "ngschematics.componentTypes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "type": "string",
                                    "description": "Required component type's name, must be unique."
                                },
                                "options": {
                                    "type": "array",
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "minItems": 2,
                                        "maxItems": 2
                                    },
                                    "description": "Required list of custom options for this component type, eg. \"[[\"changeDetection\", \"OnPush\"], [\"export\", \"true\"]]\""
                                },
                                "detail": {
                                    "type": "string",
                                    "description": "Optional human description of this component type"
                                }
                            },
                            "required": [
                                "label",
                                "options"
                            ]
                        },
                        "default": [],
                        "description": "Add custom component types",
                        "scope": "resource"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "angular",
                    "title": "Angular",
                    "icon": "angular.svg"
                }
            ]
        },
        "views": {
            "angular": [
                {
                    "id": "angular-schematics",
                    "name": "Schematics",
                    "when": "inAngularProject"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production --devtool hidden-source-map",
        "compile": "webpack --no-performance",
        "watch": "webpack --watch --no-performance",
        "test": "tsc -p ./ --exactOptionalPropertyTypes false && node ./out/test/runTest.js",
        "ci:stable": "npm run test",
        "ci:insiders": "tsc -p ./ --exactOptionalPropertyTypes false && node ./out/test/runTest.js --version insiders",
        "ci:minimal": "tsc -p ./ --exactOptionalPropertyTypes false && node ./out/test/runTest.js --version 1.56.0",
        "lint": "eslint src --ext ts",
        "release:patch": "npm run vscode:prepublish && vsce publish patch && git push && git push --tags && vsce package && npm run githubrelease && npm run openvsix",
        "release:minor": "npm run vscode:prepublish && vsce publish minor && git push && git push --tags && vsce package && npm run githubrelease && npm run openvsix",
        "release:major": "npm run vscode:prepublish && vsce publish major && git push && git push --tags && vsce package && npm run githubrelease && npm run openvsix",
        "githubrelease": "CHANGELOG=$(sed -n \"/^## \\[$npm_package_version\\]/,/^## /p\" CHANGELOG.md | sed '1d;$d') && gh release create v$npm_package_version angular-schematics-$npm_package_version.vsix --title v$npm_package_version --notes \"$CHANGELOG\"",
        "openvsix": "ovsx publish angular-schematics-$npm_package_version.vsix -p $OPENVSIX_TOKEN"
    },
    "devDependencies": {
        "@types/glob": "7.1.4",
        "@types/minimist": "1.2.2",
        "@types/mocha": "9.0.0",
        "@types/node": "12.20.24",
        "@types/vscode": "1.56.0",
        "@typescript-eslint/eslint-plugin": "4.31.0",
        "@typescript-eslint/parser": "4.31.0",
        "eslint": "7.32.0",
        "glob": "7.1.7",
        "minimist": "1.2.5",
        "mocha": "9.1.1",
        "ovsx": "0.2.1",
        "ts-loader": "9.2.5",
        "typescript": "4.4.2",
        "vsce": "1.99.0",
        "vscode-test": "1.6.1",
        "webpack": "5.52.0",
        "webpack-cli": "4.8.0"
    },
    "dependencies": {
        "jsonc-parser": "3.0.0",
        "vscode-uri": "3.0.2"
    }
}
